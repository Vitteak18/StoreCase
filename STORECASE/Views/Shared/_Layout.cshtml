<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreCase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="im" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/1.png" align="right" width="80" height="80" alt="StoreCase"/></a>
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StoreCase</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="dv">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Чехлы</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Пластиковые</a>
                                <a class="dropdown-item" href="#">Силикноновые</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Защита экрана</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Обычные стекла</a>
                                <a class="dropdown-item" href="#">5D стекла</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Аксессуары</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Наушники</a>
                                <a class="dropdown-item" href="#">Зарядные устройства</a>
                                <a class="dropdown-item" href="#">Чехлы на AipPods</a>
                                <a class="dropdown-item" href="#">Apple watch</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Администрирование</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Категории чехлов</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Case" asp-action="Index">Чехлы</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <div class="dv1">
                                <partial name="_LoginPartial" />
                            </div>
                        </li>
                    </ul>
                    
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - StoreCase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
